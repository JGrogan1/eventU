<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.eventu">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".StartPageActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".StartPageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.eventu.StartPageActivity"/>
        </activity>
        <activity
            android:name=".AccountRetrievalActivity"
            android:label="@string/title_forgot_password"
            android:parentActivityName=".LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.eventu.LoginActivity"/>
        </activity>
        <activity
            android:name=".SchoolSelectActivity"
            android:label="@string/title_activity_register"
            android:parentActivityName=".StartPageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.eventu.StartPageActivity"/>
        </activity>
        <activity
            android:name=".AccountTypeActivity"
            android:label="@string/title_activity_register"
            android:parentActivityName=".SchoolSelectActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.eventu.SchoolSelectActivity"/>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register"
            android:parentActivityName=".AccountTypeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.eventu.AccountTypeActivity"/>
        </activity>
        <activity android:name=".HomePageActivity">
        </activity>
        <activity
            android:name=".CreateEventActivity"
            android:label="@string/title_activity_create_event"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>